{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "$assets/*": [
        "./src/assets"
      ],
      "$lib/*": [
        "./src/lib"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
